@model OnlineTelMag.Data.Brand

@{
    ViewData["Title"] = "Create";
}

<h1>Създай модел</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameBrand" class="control-label">Име</label>
                <input asp-for="NameBrand" class="form-control" />
                <span asp-validation-for="NameBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameModel" class="control-label">Модел</label>
                <input asp-for="NameModel" class="form-control" />
                <span asp-validation-for="NameModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:lime" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
