@model OnlineTelMag.Data.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Изтрий</h1>

<h3>Сигурни ли сте ,че искате да изтриета тази поръчка ?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Потребител
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Users.FullName)
        </dd class>
        <dt class = "col-sm-2">
           Продукт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telephones.TelName)
        </dd class>
        <dt class = "col-sm-2">
           Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRegister)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a style="color:lime" asp-action="Index">Назад</a>
    </form>
</div>
