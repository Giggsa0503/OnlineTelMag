@model OnlineTelMag.Data.Order

@{
    ViewData["Title"] = "Edit";
}

<h1>Промени</h1>

<h4>Поръчка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TelephoneId" class="control-label">Продукт</label>
                <select asp-for="TelephoneId" class="form-control" asp-items="ViewBag.TelephoneId"></select>
                <span asp-validation-for="TelephoneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:lime" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
