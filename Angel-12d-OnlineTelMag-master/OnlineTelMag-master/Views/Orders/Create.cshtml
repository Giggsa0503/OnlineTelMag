@model OnlineTelMag.Data.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Създай поръчка</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TelephoneId" class="control-label">Продукт</label>
                <select asp-for="TelephoneId" class ="form-control" asp-items="ViewBag.TelephoneId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Купи" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:lime" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
